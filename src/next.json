{
  "$schema"           : "https://json.schemastore.org/tsconfig",
  "extends"           : "@pooxlabs/presets/base-config",
  "compilerOptions"   : {
    "plugins"           : [{ "name": "next" }],
    "module"            : "ESNext",
    "moduleResolution"  : "Bundler",
    "allowJs"           : true,
    "jsx"               : "preserve",
    "noEmit"            : true
  }
}
